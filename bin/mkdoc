#!/bin/bash

function selectdocpath {
	IFS=g
	read -ra paths <<< "$DOCPATH"

	for p in ${paths[@]}; do
		testpath=${p//\~/$HOME}
		if [[ $PWD =~ $testpath ]]; then
			echo $testpath
		fi
	done
	echo ""
}

source ~/.config/docsrc
docpath=$(selectdocpath)
[ -f $docpath/docsrc ] && source $docpath/docsrc
[ -f $PWD/docsrc ] && source $PWD/docsrc

projname="$1"
shift
title="$@"

mkdir $projname
mkdir $projname/sections

if $USETWOCOLUMN; then
	column='[twocolumn]'
else
	column=''
fi

if $ADDABSTRACT; then
	maketitle='\maketitleandabstract{}'
else
	maketitle='\maketitle'
fi

if $NUMBERPAGES; then
	topmatter="\pagenumbering{gobble}
	$maketitle"
else
	topmatter=$maketitle
fi

sed "s/\_/\\\_/g" > $projname/$projname.tex << _EOF_
\documentclass$column{article}

\usepackage{$DOCTYPE}

\setmainfont{$MAINFONT}
\settitlefont{$TITLEFONT}

\title{$title}
\author{$AUTHOR \\\\ email:
	\href{mailto:$EMAIL}{$EMAIL}}

\begin{document}
	$topmatter

\end{document}
_EOF_
