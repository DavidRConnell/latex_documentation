\newcommand{\figwidth}{0.8\columnwidth}
\newcommand{\inputfigure}[2][]{%
  \begin{figure}[ht]
    \centering
		\includefigure{#2}
    \caption{#1}
  \end{figure}
}

\newcommand{\inputsubfigure}[5]{%
  \begin{figure}[ht]
  \centering
    \begin{subfigure}[t]{0.4\textwidth}
      \centering
			\includefigure{#3}
      \caption{\footnotesize#1}
    \end{subfigure}%
    \quad
    \begin{subfigure}[t]{0.4\textwidth}
      \centering
			\includefigure{#4}
      \subcaption{\footnotesize#2}
    \end{subfigure}
  \caption{#5}
  \end{figure}
}

\newcommand{\includefigure}[1]{
	\IfFileExists{./figures/#1.pgf}{
		\resizebox{\figwidth}{!}{\input{./figures/#1.pgf}}
	}{\IfFileExists{./figures/#1.tex}{
		\resizebox{\figwidth}{!}{\input{./figures/#1.tex}}
	}{\includegraphics[width=\figwidth]{./figures/#1}}
}}

